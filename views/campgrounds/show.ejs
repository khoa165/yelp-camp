<%- include("../partials/header") %>

<div class="container my-3">
  <a href="/campgrounds"><i class="fas fa-long-arrow-alt-left"></i> Back to campgrounds</a>
  <div class="row mt-3">
    <div class="col-md-3">
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img src="<%= camp.image %>" class="img-fluid">
        <div class="caption">
          <h4 class="float-right">$<%= camp.price %>/night</h4>
          <h4><a href="#"><%= camp.name %></a></h4>
          <p><%= camp.description %></p>
          <p><em>Submitted by <%= camp.author.username %></em></p>
          <% if (currentUser && camp.author.id.equals(currentUser._id)) { %>
            <a class="btn btn-warning btn-sm" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
            <form class="delete-form" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
      <div class="jumbotron py-4 px-5">
        <div class="text-right">
          <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>/comments/new">Add new comment</a>
        </div>
        <hr>
        <% camp.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-md-12 my-0">
              <strong><%= comment.author.username %></strong>
              <span class="float-right">10 days ago</span>
              <p><%= comment.text %></p>
              <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                <a href="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                <form class="delete-form" action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              <% } %>
              <hr>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
