<%- include("../partials/header") %>

<div class="container my-3">
  <a href="/campgrounds/<%= camp._id %>"><i class="fas fa-long-arrow-alt-left"></i> Back to <%= camp.name %></a>
  <div class="my-2 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h3 class="text-center font-italic">Edit <%= camp.name %>!</h3>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" class="my-4">
      <div class="form-group">
        <label for="campgroundName">Campground name</label>
        <input type="text" class="form-control" id="campgroundName" value="<%= camp.name %>" name="campground[name]">
      </div>
      <div class="form-group">
        <label for="campgroundPrice">Campground price</label>
        <input type="number" class="form-control" id="campgroundPrice" value="<%= camp.price %>" name="campground[price]" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="campgroundImage">Campground image</label>
        <input type="text" class="form-control" id="campgroundImage" value="<%= camp.image %>" name="campground[image]">
      </div>
      <div class="form-group">
        <label for="campgroundDescription">Campground description</label>
        <input type="text" class="form-control" id="campgroundDescription" value="<%= camp.description %>" name="campground[description]">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
  </div>
</div>

<%- include("../partials/footer") %>
